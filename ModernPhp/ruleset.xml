<?xml version="1.0"?>
<ruleset name="ModernPhp">
	<description>Coding standards for modern php applications</description>
	<exclude-pattern>*/vendor/*</exclude-pattern>

	<rule ref="PSR1" />
	<rule ref="PSR2" />

    <rule ref="Symfony">
        <exclude name="Squiz.Strings.ConcatenationSpacing" />
        <exclude name="Symfony.Functions.ScopeOrder" />
        <exclude name="Generic.Functions.OpeningFunctionBraceBsdAllman" />
        <exclude name="Symfony.Objects.ObjectInstantiation" />
        <exclude name="Symfony.Commenting.License" />
        <exclude name="Symfony.Commenting.FunctionComment" />
    </rule>

    <rule ref="Squiz.Strings.DoubleQuoteUsage" />
    <rule ref="Generic.Formatting.MultipleStatementAlignment" />
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="120"/>
        </properties>
    </rule>
</ruleset>
